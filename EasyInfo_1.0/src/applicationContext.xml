	</bean>
	<bean name="instructorDao" class="com.dao.impl.InstructorDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	

	<!-- 配置工具utils类 -->
	<bean name="ReadExcelBean" class="com.utils.ReadExcelBean">
	</bean>
