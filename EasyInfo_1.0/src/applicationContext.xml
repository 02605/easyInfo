	</bean>
	<bean name="patentDao" class="com.dao.impl.PatentDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean name="rewardDao" class="com.dao.impl.RewardDaoImpl">
